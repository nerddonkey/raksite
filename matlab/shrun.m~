%[x,y,z,f,name]= generate_spherical_harmonic( degree, order, type, ...
%   theta1,theta2, phi1,phi2, ...
%		rho_ref, rho_scale, ...
%   alpha, beta, gamma, ...
%   numt, nump );

[x,y,z,f,name]= generate_spherical_harmonic(14,3,0, ...
    0,180, 0,360, ...
        1.25, 0.1, ...
    0,30,45, ...
    96, 96);

% plot
clf;
colormap('gray')
s=surf(x,y,z,f);
alpha(s, 0.3)
set(s, 'edgecolor', 'none');
light               % add a light
lighting gouraud    % preferred lighting for a curved surface
axis equal off      % set axis equal and remove axis
view(-45,50)         % set viewpoint
lightangle(260,-45)
camzoom(1.6)
hold on

[x2,y2,z2,f2,name2]= generate_spherical_harmonic(14,3,0, ...
    60,75, 140,160, ...
        1.25, 0.1, ...
    0,30,45, ...
    96, 96);
colormap('copper')
ss=surf(x2,y2,z2,f2);
alpha(ss, 1.0)
set(ss, 'edgecolor', 'none');
shg